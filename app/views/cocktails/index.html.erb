<h1 class="text-center">Your cocktail list</h1>

<div class="text-center padded">
  <%= link_to "Create a cocktail", new_cocktail_path, class: 'btn btn-primary' %>
</div>


<div class="container" style="margin-top: 10px;">
  <div class="row">

    <% @cocktails.each do |cocktail| %>

    <div class="col-xs-12 col-sm-4 banner-xs-cocktails">
      <%=  link_to cocktail_path(cocktail), class: 'show-card-link' do %>
          <div class="card flex-cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.6)), url('<%= cocktail.photo? ? cl_image_path(cocktail.photo) : "https://unsplash.it/200/300" ; %>');" >

            <div class="cocktail-title">
              <h4 class="text-center"><%= cocktail.name %></h4>
            </div>

          </div>
      <% end %>
      </div>


    <% end %>

  </div>
</div>

